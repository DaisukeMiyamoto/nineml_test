axon = Section()

apical.connect(soma, 1, 0)
basilar.connect(soma, 0, 0)
axon.connect(soma, 0, 0)

soma.L = 30
soma.nseg = 1
soma.diam = 30

apical.L = 600
apical.nseg = 23
apical.diam = 1

basilar.L = 200
basilar.nseg = 5
basilar.diam = 2

axon.L = 1000
axon.nseg = 37
axon.diam = 1

for sec h.

